<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTipCalculatorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculadora de Gorjetas"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <EditText
            android:id="@+id/etBillAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Valor da conta"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:background="@android:drawable/edit_text" />

        <SeekBar
            android:id="@+id/sbTipPercentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="30"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvTipPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Porcentagem da gorjeta: 15%"
            android:layout_gravity="center_horizontal"
            android:paddingTop="8dp" />

        <Button
            android:id="@+id/btnCalculateTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Calcular Gorjeta" />

        <TextView
            android:id="@+id/tvTipResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultado: R$ 0.00"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>